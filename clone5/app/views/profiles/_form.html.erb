<div class="container">
<div class="card-body col-5">
<%= form_with(model: profile) do |form| %>
  <% if profile.errors.any? %>
   
     <div class="alert alert-warning alert-dismissible fade show" role="alert">
      
      <ul>
        <% profile.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    
     <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
     </button>
   </div>
    
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" ,class:"form-lable" %>
    <%= form.text_field :name ,class:"form-control"%>
  </div>

  <div>
    <%= form.label :bio, style: "display: block" ,class:"form-lable"%>
    <%= form.text_area :bio ,class:"form-control"%>
  </div>

  <div>
    <%= form.label :profile_photo, style: "display: block" ,class:"form-lable"%>
    <%= form.file_field :profile_photo ,class:"form-control"%>
  </div>

  <div>
    <%= form.text_field :user_id ,value:current_user.id,type: :hidden%>
  </div>
  <br/>
  <div>
    <%= form.submit class:"btn btn-success"%>
  </div>
<% end %>
</div>
</div>